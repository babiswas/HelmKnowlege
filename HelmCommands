1.helm lint --strict
2.helm install release-name /templates --dry-run
3.helm --help

4.helm create myapp
tree myapp

5.helm list -a
#helm command to list all the versions of a release.

6.helm upgrade release-name myapp
#Upgrade the application.

7.helm rollback myrelease 1
#To downgrade the release   to previous versions

#Rollback
------------
helm create xyz
helm install myrelease xyz
helm upgrade myrelease xyz
helm rollback myrelease 1


helm templating command
=======================
helm create xyz
tree xyz
helm template xyz


